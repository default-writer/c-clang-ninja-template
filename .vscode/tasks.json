{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "nmake",
                "args": [ "/f", "Makefile.win" ]
            },
            "linux": {
                "command": "make",
                "args": [ "-f", "Makefile.linux" ]
            },
            "osx": {
                "command": "make",
                "args": [ "-f", "Makefile.linux" ]
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "group": "build",
            "windows": {
                "command": "nmake",
                "args": [ "/f", "Makefile.win", "clean" ]
            },
            "linux": {
                "command": "make",
                "args": [ "-f", "Makefile.linux", "clean" ]
            },
            "osx": {
                "command": "make",
                "args": [ "-f", "Makefile.linux", "clean" ]
            }
        }
    ]
}